<div class="list-container"  >
        <div class="items-list">
            <% @event.items.each do |item| %>
              <%= link_to '✖️', item_path(item), method: :delete, title: 'Delet item from list', class: "item-delete-button", remote: true %>
              <div class="list-item-name"><%= item.name %></div>
              <% if item.user_id != nil %>
                <% if item.user.first_name == nil %>
                  <div class="item-bringer">Somebody</div>
                <% else %>      
                  <div class="item-bringer"><%= item.user.first_name %></div>
                <% end %>
              <% else %>
               <%= button_to 'Bring it', item_path(item), class:"bring-button", method: :patch, remote: true %>
              <% end %>
            <% end %>
        </div>
        <div class="items-form">
            <%= simple_form_for [@event, Item.new], remote: true do |f| %>
            <div class="add-item">
              <%= f.input :name, :placeholder => "Enter item", label: false %>
              <%= f.submit "Add Item", class: "button-map" %>
            </div>
            <% end %>
        </div>
</div>

