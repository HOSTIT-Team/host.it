<%= simple_form_for @event do |f| %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.input :time, as: :datetime %>
  <%= f.input :description %>
  <% if current_page?(new_event_path) %>
    <%= f.submit "Create Event" %>
  <% else %>
    <%= f.submit "Update Event" %>
  <% end %>
<% end %>
